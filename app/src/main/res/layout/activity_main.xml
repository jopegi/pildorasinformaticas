<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="formacion.josevi.com.herramientas.activities.MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:name="formacion.josevi.com.herramientas.fragments.MenuFragment"
        tools:layout="@layout/fragment_menu">
    </fragment>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/maximo"
            android:layout_height="@dimen/maximo"
            android:src="@drawable/herramientas"/>
    </RelativeLayout>



</LinearLayout>
